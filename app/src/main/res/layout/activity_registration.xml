<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ytu_blue_background"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/new_reg_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="Yeni Kayıt"
            android:textColor="@color/white"
            android:textSize="40dp" />

        <ImageView
            android:layout_width="97dp"
            android:layout_height="102dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="40dp"
            android:adjustViewBounds="true"
            android:maxWidth="62dp"
            android:maxHeight="62dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ytulogopng" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/email_registration"
            android:layout_below="@id/new_reg_text"
            android:background="#30ffffff"
            android:hint="E-posta adresi"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:layout_margin="10dp"
            android:padding="20dp"
            android:drawableLeft="@drawable/baseline_person_outline_24"
            android:drawablePadding="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/password_registration"
            android:layout_below="@id/email_registration"
            android:background="#30ffffff"
            android:hint="Şifre"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:layout_margin="10dp"
            android:padding="20dp"
            android:drawableLeft="@drawable/baseline_lock_24"
            android:drawablePadding="20dp"
            android:inputType="textPassword"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-20dp"
            android:id="@+id/name"
            android:layout_below="@id/password_registration"
            android:background="#30ffffff"
            android:hint="İsim"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:layout_margin="10dp"
            android:padding="20dp"
            android:drawableLeft="@drawable/baseline_person_outline_24"
            android:drawablePadding="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/surname"
            android:layout_below="@id/name"
            android:background="#30ffffff"
            android:hint="Soyisim"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:layout_margin="10dp"
            android:padding="20dp"
            android:drawableLeft="@drawable/baseline_person_outline_24"
            android:drawablePadding="20dp"/>

        <com.google.android.material.button.MaterialButton
            android:layout_marginTop="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sign_up_button"
            android:layout_below="@id/surname"
            android:text="KAYIT OL"
            android:backgroundTint="@color/ytu_blue"
            android:layout_centerHorizontal="true"/>

        <com.google.android.material.button.MaterialButton
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/return_to_login"
            android:layout_below="@id/sign_up_button"
            android:text="Giriş sayfasına dön"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>